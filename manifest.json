{
  "manifest_version": 2,

  "name": "PolyVocab",
  "description": "Manage your multi language vocabullary. Get translations immidiately.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "webRequest",
    "https://ajax.googleapis.com/",
    "https://iavi.me/"
  ],

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["libs/fetch.js", "content_scripts/main.js"],
      "css": ["content_scripts/main.css"]
    }
  ]
}
